<div class="container">
  <div class="login">
    <div class="login-screen">
      <div class="login-form">
        <div class="form-group">

        <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
          <%= f.email_field :email, :autofocus => true, :class => "login-field-icon fui-user", :class => "form-control login-field", :value => '', :placeholder => 'Enter your Email' %>

          <%= f.password_field :password, :class => "password-field-icon fui-user", :class => "form-control login-field", :value => '', :placeholder => 'Enter your Password' %></div>

          <% if devise_mapping.rememberable? -%>
            <%= f.check_box :remember_me, :class => 'checkbox', :data_toggle => "checkbox" %> 
              <%= f.label :remember_me %>
          <% end -%>

         <%= f.submit "Sign in", :class => "btn btn-primary btn-lg btn-block" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>


