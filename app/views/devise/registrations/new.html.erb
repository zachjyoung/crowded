
<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
<div class="container">
  <div class="login">
    <div class="login-screen">
      <div class="login-form">
        <div class="form-group">
          <%= f.email_field :email, :autofocus => true, :class => "login-field-icon fui-user", :class => "form-control login-field", :value => '', :placeholder => 'Enter your Email' %>
          </div>

          <div class="form-group">
          <%= f.password_field :password, :autofocus => true, :class => "password-field-icon fui-user", :class => "form-control login-field", :placeholder => 'Enter your Password' %>
          </div>

          <div class="form-group">
          <%= f.password_field :password_confirmation, :autofocus => true, :class => "password-field-icon fui-user", :class => "form-control login-field", :value => '', :placeholder => 'Confirm your Password' %>
          </div>

         <%= button_tag(type: 'Sign up', :class => "btn btn-primary btn-lg btn-block") do %>
              Save

          <% end %>
      </div>
    </div>
  </div>
</div>

<% end %>


